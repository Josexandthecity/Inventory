<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="25">

        <!-- Card para mostrar la info -->
        <Frame BackgroundColor="White"
               CornerRadius="15"
               HasShadow="True"
               Padding="20">

            <StackLayout Spacing="15">
                <Label Text="Nombre:"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#4285F4" />

                <Label Text="{Binding Text}"
                       FontSize="14"
                       TextColor="#333" />

                <BoxView HeightRequest="1" Color="#e0e0e0" />

                <Label Text="Detalle:"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#4285F4" />

                <Label Text="{Binding Description}"
                       FontSize="14"
                       TextColor="#333" />
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>