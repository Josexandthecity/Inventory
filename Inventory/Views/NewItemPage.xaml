<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inventory.Views.NewItemPage"
             Shell.PresentationMode="ModalAnimated"
             Title="New Item"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true">
    <ContentPage.Content>
         <StackLayout Spacing="15" Padding="25">
        
        <!-- Campo de texto -->
        <Label Text="Nombre"
               FontSize="16"
               TextColor="#4285F4"
               FontAttributes="Bold" />

        <Frame CornerRadius="10" Padding="5" BackgroundColor="#f0f4ff" HasShadow="False">
            <Entry Text="{Binding Text, Mode=TwoWay}"
                   FontSize="16"
                   BackgroundColor="Transparent"
                   TextColor="Black" />
        </Frame>

        <!-- Descripción -->
        <Label Text="Detalles"
               FontSize="16"
               TextColor="#4285F4"
               FontAttributes="Bold" />

        <Frame CornerRadius="10" Padding="5" BackgroundColor="#f0f4ff" HasShadow="False">
            <Editor Text="{Binding Description, Mode=TwoWay}"
                    AutoSize="TextChanges"
                    FontSize="16"
                    BackgroundColor="Transparent"
                    TextColor="Black" />
        </Frame>

        <!-- Botones -->
        <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
            <Button Text="Cancelar"
                    Command="{Binding CancelCommand}"
                    BackgroundColor="#e0e0e0"
                    TextColor="Black"
                    CornerRadius="10"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="45" />

            <Button Text="Guardar"
                    Command="{Binding SaveCommand}"
                    BackgroundColor="#4285F4"
                    TextColor="White"
                    CornerRadius="10"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="45" />
        </StackLayout>
    </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
